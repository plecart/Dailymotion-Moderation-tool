# PostgreSQL
POSTGRES_USER=moderation
POSTGRES_PASSWORD=moderation_secret
POSTGRES_DB=moderation_db

# Moderation Queue
DATABASE_URL=postgresql://moderation:moderation_secret@postgres:5432/moderation_db
# Optional: PostgreSQL connection pool settings
# DATABASE_POOL_MIN_SIZE: Minimum connections kept open (default: 2)
# DATABASE_POOL_MAX_SIZE: Maximum concurrent connections (default: 10)
# DATABASE_POOL_MIN_SIZE=
# DATABASE_POOL_MAX_SIZE=

# Dailymotion API Proxy
REDIS_URL=redis://redis:6379/0
DAILYMOTION_API_BASE_URL=https://api.dailymotion.com
CACHE_TTL_SECONDS=300

# Optional: PostgreSQL advisory lock key for migrations (default = 0x646D5F6D69677261)
# MIGRATION_LOCK_KEY=

# Optional: Base key for moderator-scoped advisory locks (default = 0x6D6F645F6C6F636B)
# Override in .env if multiple apps share the same DB
# MODERATOR_LOCK_BASE_KEY=
